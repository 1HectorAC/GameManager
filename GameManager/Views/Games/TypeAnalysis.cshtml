
@{
    /**/

    ViewBag.Title = "TypeAnalysis";
}


@if (ViewBag.Year == null)
{
    <h2>TypeAnalysis</h2>
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="control-label col-md-2" for="SelectYear">Select Year</label>
            @Html.DropDownList("SelectYear", null, htmlAttributes: new { @class = "form-control" })
            <span class="field-validation-valid text-danger" data-valmsg-for="SelectYear" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <p>Please select a Type:</p>
            <input type="radio" id="type1" name="Type" value="1" checked="checked">
            <label for="type1">physical v. digital</label><br>
            <input type="radio" id="type2" name="Type" value="2">
            <label for="type2">Borrowed v. owned</label><br>
            <input type="radio" id="type3" name="Type" value="3">
            <label for="type3">Replayed v. First Play</label><br />
            <input type="radio" id="type4" name="Type" value="4">
            <label for="type4">2 Game System</label>
            <div>
                <label class="control-label" for="Console1" hidden>Console1</label>
                @Html.DropDownList("Console1", (SelectList)ViewBag.SystemName, htmlAttributes: new { @class = "form-control", @style = "width: 100px; display:inline-block;margin-left:30px" })
                <p style="display:inline-block">v.</p>
                <label class="control-label" for="Console2" hidden>Console2</label>
                @Html.DropDownList("Console2", (SelectList)ViewBag.SystemName, htmlAttributes: new { @class = "form-control", @style = "width: 100px; display:inline-block" })

                <span class="field-validation-valid text-danger" data-valmsg-for="Console1" data-valmsg-replace="true"></span>
                <span class="field-validation-valid text-danger" data-valmsg-for="Console2" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enter" class="btn btn-default" />
            </div>
        </div>
    }
}
else
{
        <h2 style="text-align:center">@ViewBag.Year TypeAnalysis (@ViewBag.Title1 v. @ViewBag.Title2) </h2>
    <div class="row">
        <div class="col-md-4">
            <div style="text-align:center;">
                <h3>Total @ViewBag.Title1:</h3>
                <h1>@ViewBag.Count1</h1>
            </div>
            <div style="text-align:center;">
                <h3>Total @ViewBag.Title2:</h3>
                <h1>@ViewBag.Count2</h1>
            </div>
        </div>
    </div>

}


