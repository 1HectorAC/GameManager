
@{
    ViewBag.Title = "AcrossYearsAnalysis";
}

@if (ViewBag.Option == null)
{

    <div class="row">
        <div class="col-md-6 col-md-offset-3 whiteCard text-center" style="padding: 10px; margin-top:10px">
            <h2>Across Years Report</h2>
            <hr class="greenLine" />


            <p>Select a type.</p>
            <form action="AcrossYearsAnalysis" method="get">
                <div class="form-group">
                    @*
                        <label class="control-label col-md-3 col-md-offset-1" for="SelectYear">Select Year</label>
                        <div class="col-md-6">
                            @Html.DropDownList("SelectYear", null, htmlAttributes: new { @class = "form-control" })
                            <span class="field-validation-valid text-danger" data-valmsg-for="SelectYear" data-valmsg-replace="true"></span>
                        </div>*@

                    <div class="btn-group btn-group-toggle " data-toggle="buttons">
                        <label class="btn btn-primary active ">
                            <input type="radio" name="option" id="option1" value="Buy" autocomplete="off" checked> Bought
                        </label>
                        <label class="btn btn-primary">
                            <input type="radio" name="option" id="option2" value="Play" autocomplete="off"> Played
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <div class=" col-md-12">
                        <br />
                        <input type="submit" value="Enter" class="btn customButton" />
                    </div>
                </div>
                <div class="col-md-12">
                    <p>Note: Make sure you have entered games into your games list before moving forwarc. Go to games list @Html.ActionLink("here.", "Index", "Games")</p>
                </div>
            </form>
        </div>
    </div>

}
else
{
    <h2 class="whiteText" style="text-align:center">Across Years Report (@ViewBag.Option)</h2>
    <hr class="whiteLine" style="margin-bottom:10px" />
    <div class="row">
        @for (int i = 0; i < @ViewBag.YearsList.Count; i++)
        {
            <div class="col-md-12">
                <div class="col-md-2 text-center">
                    <br />
                    <h1 class="whiteText">@ViewBag.YearsList[i]</h1>

                </div>
                <div class="col-md-10 ">
                    <div class="col-md-12">
                        <div class="whiteCard text-center">
                            @for (int j = 0; j < @ViewBag.VariableTitles.Count; j++)
                            {
                                <div class="col-md-3">
                                    <h4>@ViewBag.VariableTitles[j]</h4>
                                    <h2>@ViewBag.VariableValues[i][j]</h2>
                                </div>
                            }
                            <p style="color:#f7f7f7; margin:0px; padding:0px">a</p>
                        </div>
                    </div>
                    @for(int k = 0; k < ViewBag.SystemTitles[i].Count; k++)
                    {
                        <div class="col-md-2">
                            <div class="whiteCard text-center" style="padding:1px">
                                <h4>@ViewBag.SystemTitles[i][k]</h4>
                                <h2>@ViewBag.SystemValues[i][k]</h2>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>

        }


    </div>

}