@model GameManager.Models.Game

@{
    ViewBag.Title = "Delete";
}

<br />
<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center whiteCard">
        <h2>Delete Game</h2>
        <h4>Are you sure you want to delete this?</h4>

        <hr class="greenLine" />
        <br />
        <dl class="dl-horizontal text-left">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                Console
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GameSystem.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                Purchased Date
            </dt>

            <dd>
                @if (Model.DateOfPurchase != null)
                {
                    @Model.DateOfPurchase.Value.ToShortDateString()
                }
            </dd>

            <dt>
                Date Played
            </dt>

            <dd>
                @if (Model.DatePlayed != null)
                {
                    @Model.DatePlayed.Value.ToShortDateString()
                }

            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Borrowed)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Borrowed)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Physical)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Physical)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Replayed)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Replayed)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn customButton" />
                <br /><br />
                @Html.ActionLink("Go to Games List", "Index")
                <br /><br />
            </div>
        }

    </div>
</div>

