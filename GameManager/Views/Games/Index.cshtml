@model IEnumerable<GameManager.Models.Game>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-default whiteCard" style="margin-top:15px;">
    <div class="panel-heading" style="text-align:center;line-height:.8">
        <h2 style="">Games List</h2>

        <p>
            @Html.ActionLink("Add Game", "Create", null, new { @class = "btn customButton" })
        </p>
    </div>

    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        Console
                    </th>
                    <th>
                        Purchase Date
                    </th>
                    <th>
                        Date Played
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td></td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GameSystem.Name)
                        </td>

                        <td>
                            @if (item.DateOfPurchase != null)
                            {
                                @item.DateOfPurchase.Value.ToShortDateString()
                            }
                        </td>
                        <td>
                            @if (item.DatePlayed != null)
                            {
                                @item.DatePlayed.Value.ToShortDateString()
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn customButton" }) |
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn customButton" }) |
                            @Html.ActionLink("-", "Delete", new { id = item.Id, }, new { @class = "btn customButton" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

