
@{
    /**/

    ViewBag.Title = "TypeAnalysis";
}


@if (ViewBag.Year == null)
{
    <h2>TypeAnalysis</h2>
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="control-label col-md-2" for="SelectYear">Select Year</label>
            @Html.DropDownList("SelectYear", null, htmlAttributes: new { @class = "form-control" })
            <span class="field-validation-valid text-danger" data-valmsg-for="SelectYear" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enter" class="btn btn-default" />
            </div>
        </div>
    }
}
else
{
    <h2 style="text-align:center">@ViewBag.Year TypeAnalysis</h2>
    <div class="row">
        <div class="col-md-4">
            <div style="text-align:center;">
                <h3>Total Borrowed:</h3>
                <h1>@ViewBag.Borrowed</h1>
            </div>
        </div>

        <div class="col-md-4">
            <div style="text-align:center;">
                <h3>Total Replayed:</h3>
                <h1>@ViewBag.Replayed</h1>
            </div>
        </div>

        <div class="col-md-4">
            <h3 style="text-align:center">Console Count:</h3>
            <dl class="dl-horizontal">
                @for (int i = 0; i < ViewBag.SystemNames.Length; i++)
                {
                    <dt> @ViewBag.SystemNames[i] </dt>
                    <dd> @ViewBag.SystemCounts[i] </dd>
                }
            </dl>
        </div>

        <div class="col-md-8">
            <div class="col-md-6">
                <div style="text-align:center;">
                    <h3>Physical:</h3>
                    <h1>@ViewBag.Physical</h1>
                </div>
            </div>
            <div class="col-md-6">
                <div style="text-align:center;">
                    <h3>Digital:</h3>
                    <h1>@ViewBag.Digital</h1>
                </div>
            </div>

        </div>
    </div>

}


