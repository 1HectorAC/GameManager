
@{
    /**/

    /**/

    ViewBag.Title = "TypeAnalysis";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js" integrity="sha512-d9xgZrVZpmmQlfonhQUvTR7lMPtO7NkZMkA0ABN3PHCbKA5nqylQ/yWlFAyY6hYgdF1Qh6nYiuADWwKB4C2WSw==" crossorigin="anonymous"></script>


@if (ViewBag.Year == null)
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6 col-md-offset-3 whiteCard text-center" style="padding: 10px; margin-top:10px">
                <h2>Type Analysis</h2>
                <hr class="greenLine" />
                <p>Select a year to analyze.</p>
                <div class="form-group">
                    <label class="control-label col-md-3 col-md-offset-1" for="SelectYear">Select Year</label>
                    <div class="col-md-6">
                        @Html.DropDownList("SelectYear", null, htmlAttributes: new { @class = "form-control" })
                        <span class="field-validation-valid text-danger" data-valmsg-for="SelectYear" data-valmsg-replace="true"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <br />
                        <input type="submit" value="Enter" class="btn customButton" />
                    </div>
                </div>
                <div class="col-md-12">
                    <p>Note: If you don't have any played games in your games List then you won't see any years to select. Go to games list @Html.ActionLink("here.", "Index", "Games")</p>
                </div>
            </div>
        </div>
    }
}
else
{
    <h2 class="whiteText text-center">@ViewBag.Year Type Analysis</h2>
    <hr class="whiteLine" style="margin-bottom:10px" />
    <div class="row">

        <!--Data items.-->
        <div class="col-md-12">
            <div class="whiteCard text-center">
                <div class="col-md-3">
                    <h3 style="margin-bottom:0px; padding-bottom:0px">Total Games Played</h3>
                    <h1 style="margin-top:0px; padding-top:0px">@ViewBag.Count</h1>
                </div>
                <div class="col-md-3">
                    <h3 style="margin-bottom:0px; padding-bottom:0px">Total Borrowed</h3>
                    <h1 style="margin-top:0px; padding-top:0px">@ViewBag.Borrowed</h1>
                </div>
                <div class="col-md-3">
                    <h3 style="margin-bottom:0px; padding-bottom:0px">Total Replayed</h3>
                    <h1 style="margin-top:0px; padding-top:0px">@ViewBag.Replayed</h1>
                </div>
                <div class="col-md-3">
                    <h3 style="margin-bottom:0px; padding-bottom:0px">Physical/Digital</h3>
                    <h1 style="margin-top:0px; padding-top:0px">@ViewBag.Physical - @ViewBag.Digital</h1>
                </div>
                <p style="color:#f7f7f7; margin:0px; padding:0px">a</p>
            </div>
        </div>

        <div class="col-md-7">
            <!--Monthly count chart-->
            <div class="whiteCard">
                <!--Setup monthly cost related variable(costData) for chart setup in other js file.-->
                <script>
                var countData = new Array();
                var array = @Html.Raw(Json.Encode(@ViewBag.MonthlyCount));
                for(var i =0; i<array.length;i++){
                    countData[i] = array[i];
                }
                </script>
                <!--Canvas used to display the chart.-->
                <canvas id="countBarGraph" width="700" height="275" style="padding:10px"></canvas>
            </div>

            <!--Game Console pie chart.-->
            <div class="col-md-8 col-lg-offset-2">
                <div class="whiteCard">
                    <!--Setup system name and data for chart.-->
                    <script>
                var systemData = new Array();
                var systemNames = new Array();
                var systemArray = @Html.Raw(Json.Encode(@ViewBag.SystemCounts));
                var systemArray2 = @Html.Raw(Json.Encode(@ViewBag.SystemNames));
                for(var i =0; i<systemArray.length;i++){
                    systemData[i] = systemArray[i];
                    systemNames[i] = systemArray2[i];
                }
                    </script>
                    <!--Canvas used to display the chart.-->
                    <canvas id="consolePie" height="350" style="width:100%;max-width:600px;padding-bottom:15px; margin-top:5px"></canvas>
                </div>

            </div>

        </div>

        <!--Monthly data.-->
        <div class="col-md-5">
            <div class="panel panel-default whiteCard">
                <div class="panel-heading" style="text-align:center;line-height:.8">
                    <h3 style="margin:0px;">Games Played Data by Month</h3>
                </div>

                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th>Borrowed</th>
                                <th>Replayed</th>
                                <th>Physcial</th>
                                <th>Digital</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < @ViewBag.Months.Length; i++)
                            {
                                <tr>
                                    <td>
                                        @ViewBag.Months[i]
                                    </td>
                                    <td>
                                        @ViewBag.BorrowedMonthlyCount[i]
                                    </td>
                                    <td>
                                        @ViewBag.ReplayedMonthlyCount[i]
                                    </td>
                                    <td>
                                        @ViewBag.PhysicalMonthlyCount[i]
                                    </td>
                                    <td>
                                        @ViewBag.DigitalMonthlyCount[i]
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

        <!--Game list display.-->
        <div class="col-md-12">
            <div class="panel panel-default whiteCard" style="margin-top:10px;">
                <div class="panel-heading text-center" style="line-height:.8;">
                    <h3 style="margin:0px;">Games List</h3>
                </div>

                <div class="panel-body">

                    <div class="text-center" id="searchType" style="margin: 0 auto">
                        <form name="type_Form" id="type_Form" action="">
                            <input data-val="true" id="Year" name="Year" type="hidden" value=@ViewBag.Year />
                            <h4>Select Search Type</h4>
                            <div class="btn-group btn-group-toggle " data-toggle="buttons">
                                <label class="btn btn-primary active notConsoleButton">
                                    <input type="radio" name="Type" id="option1" value="1" autocomplete="off" checked> Borrowed
                                </label>
                                <label class="btn btn-primary notConsoleButton">
                                    <input type="radio" name="Type" id="option2" value="2" autocomplete="off"> Replayed
                                </label>
                                <label class="btn btn-primary notConsoleButton">
                                    <input type="radio" name="Type" id="option3" value="3" autocomplete="off"> Physical Copy
                                </label>
                                <label class="btn btn-primary notConsoleButton">
                                    <input type="radio" name="Type" id="option4" value="4" autocomplete="off"> Digital Copy
                                </label>
                                <label class="btn btn-primary" id="consoleButton">
                                    <input type="radio" name="Type" id="option5" value="5" autocomplete="off"> Console
                                </label>
                            </div>
                            <div id="consoleSection" hidden>
                                <h4>Select Console</h4>
                                <label class="control-label" for="SelectSystemName" hidden>Select System</label>
                                @Html.DropDownList("SelectSystemName", null, htmlAttributes: new { @class = "form-control btn btn-primary", @style = "width: 100px; display:inline-block" })
                                <span class="field-validation-valid text-danger" data-valmsg-for="SelectSystemName" data-valmsg-replace="true"></span>
                            </div>
                            <br /><br />
                            <input type="submit" value="Enter" class="btn customButton" />
                        </form>
                    </div>

                    <!-- Type table setup. -->
                    <div id="typeTable" hidden>
                        <h3 id="tableTitle" style="text-align:center; color:#45c687"></h3>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Date Played</th>
                                    <th>Console</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="displayType"></tbody>
                        </table>

                        <!--Button to reset type search. -->
                        <input id="resetSearch" class="btn customButton" type="button" value="New  Type Search" onclick="ShowInput();" />
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/GraphSetup.js")" type="text/javascript"></script>
    <script>
        PieGraphSetup("consolePie", "Games Played by Console", systemNames, systemData);
        BarGraphSetup("countBarGraph", "Games Played by Month", ['Jan', 'Feb', 'March', 'April', 'May', 'June', 'July', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'], countData);
    </script>
}



@section PageScripts{
    <script type="text/javascript" src="~/Scripts/GamesType.js"></script>
}

